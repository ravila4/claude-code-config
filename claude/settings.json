{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Skill(skill-creator)",
      "Skill(speaking)",
      "Skill(graphviz-diagrams)",
      "Skill(mermaid-diagrams)",
      "Skill(obsidian-vault)",
      "Skill(prompt-optimization)",
      "Skill(daily-journal)",
      "Skill(test-driven-development)",
      "Bash(speak *)",
      "Bash(speak)",
      "Bash(* | speak *)",
      "Bash(* | speak)",
      "Bash(speak * && listen)",
      "Bash(speak * && listen *)",
      "Bash(listen *)",
      "Bash(listen)",
      "Bash(/Users/ricardoavila/.local/bin/speak *)",
      "Bash(/Users/ricardoavila/.claude/skills/speaking/scripts/speak *)",
      "Bash(/Users/ricardoavila/.local/bin/listen *)",
      "Bash(/Users/ricardoavila/.claude/skills/speaking/scripts/listen *)",
      "Bash(git status *)",
      "Bash(git diff *)",
      "Bash(git log *)",
      "Bash(git show *)",
      "Bash(git branch *)",
      "Bash(uv run pytest:*)",
      "Bash(uv sync:*)",
      "Bash(uv run ruff check:*)",
      "Bash(wc:*)",
      "Bash(sleep:*)",
      "Bash(sr search:*)",
      "Bash(ssh:*)",
      "Bash(codex exec:*)"
    ],
    "deny": [],
    "ask": [],
    "defaultMode": "default"
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "date '+Today is %A, %B %e, %Y. Time: %H:%M'"
          },
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/check_alerts.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "date '+Task finished: %H:%M'"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/afk/afk-notify.sh",
            "timeout": 15
          }
        ]
      },
      {
        "matcher": "elicitation_dialog",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/afk/afk-notify.sh",
            "timeout": 15
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/afk/afk-stop-hook.sh",
            "timeout": 10
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "${HOME}/.claude/statusline.sh"
  },
  "enabledPlugins": {
    "pyright-lsp@claude-plugins-official": true
  },
  "spinnerVerbs": {
    "mode": "append",
    "verbs": [
      "Aligning",
      "Assembling",
      "Annealing",
      "Ligating",
      "Splicing",
      "Amplifying",
      "Synthesizing",
      "Sequencing",
      "Annotating",
      "Transcribing",
      "Mutating",
      "Hybridizing",
      "Coalescing",
      "Coping"
    ]
  },
  "alwaysThinkingEnabled": true,
  "mcpServers": {},
  "feedbackSurveyState": {
    "lastShownTime": 1754080082264
  }
}
