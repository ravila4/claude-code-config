{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          { "type": "command", "command": "date '+Time: %H:%M'" }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Task",
        "hooks": [
          { "type": "command", "command": "date '+Task finished: %H:%M'" }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Skill(skill-creator)",
      "Skill(beads-issue-tracking)",
      "Skill(speaking)",
      "Skill(graphviz-diagrams)",
      "Skill(mermaid-diagrams)",
      "Skill(obsidian-vault)",
      "Skill(prompt-optimization)",
      "Skill(daily-journal)",
      "Skill(test-driven-development)",
      "Bash(speak:*)",
      "Bash(git status:*)"
    ],
    "deny": [],
    "ask": []
  },
  "statusLine": {
    "type": "command",
    "command": "${HOME}/.claude/statusline.sh"
  },
  "enabledPlugins": {
    "pyright-lsp@claude-plugins-official": true
  },
  "alwaysThinkingEnabled": true,
  "feedbackSurveyState": {
    "lastShownTime": 1754080082264
  }
}