{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Skill(skill-creator)",
      "Skill(speaking)",
      "Skill(graphviz-diagrams)",
      "Skill(mermaid-diagrams)",
      "Skill(obsidian-vault)",
      "Skill(prompt-optimization)",
      "Skill(daily-journal)",
      "Skill(test-driven-development)",
      "Bash(speak:*)",
      "Bash(git status:*)"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "date '+Today is %A, %B %e, %Y. Time: %H:%M'"
          },
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/check_alerts.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "date '+Task finished: %H:%M'"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "${HOME}/.claude/statusline.sh"
  },
  "enabledPlugins": {
    "pyright-lsp@claude-plugins-official": true
  },
  "spinnerVerbs": {
    "mode": "append",
    "verbs": [
      "Aligning",
      "Assembling",
      "Annealing",
      "Ligating",
      "Splicing",
      "Amplifying",
      "Synthesizing",
      "Sequencing",
      "Annotating",
      "Transcribing",
      "Mutating",
      "Hybridizing",
      "Coalescing",
      "Coping"
    ]
  },
  "alwaysThinkingEnabled": true,
  "mcpServers": {},
  "feedbackSurveyState": {
    "lastShownTime": 1754080082264
  }
}
